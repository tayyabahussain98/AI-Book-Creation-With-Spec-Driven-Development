<?xml version="1.0" ?>
<!--
  Depth Camera Robot Model - Module 2 Sensor Example

  This SDF demonstrates a robot with RGB-D (depth) camera:
  - 640x480 resolution at 30 FPS
  - RGB color image + depth image
  - Realistic camera intrinsics
  - ROS 2 topic publishing

  Topics published:
  - /camera/image (sensor_msgs/Image) - RGB image
  - /camera/depth_image (sensor_msgs/Image) - Depth image (32FC1 encoding)
  - /camera/camera_info (sensor_msgs/CameraInfo) - Calibration data
  - /camera/points (sensor_msgs/PointCloud2) - 3D point cloud

  Launch: gz sim camera_world.sdf
  Bridge: ros2 run ros_gz_bridge parameter_bridge /camera/image@sensor_msgs/msg/Image@gz.msgs.Image
-->
<sdf version="1.9">
  <model name="depth_camera_robot">
    <static>false</static>
    <pose>0 0 0.1 0 0 0</pose>

    <!-- Base Link (same as lidar_robot) -->
    <link name="base_link">
      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>0.167</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.167</iyy>
          <iyz>0</iyz>
          <izz>0.25</izz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <geometry>
          <box><size>0.4 0.3 0.1</size></box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box><size>0.4 0.3 0.1</size></box>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
        </material>
      </visual>
    </link>

    <!--
      ============================================================
      CAMERA LINK

      Mounted at front of robot, tilted slightly downward
      to capture objects in front of the robot.
      ============================================================
    -->
    <link name="camera_link">
      <!--
        Pose relative to base_link:
        - X: 0.2 (front of robot)
        - Z: 0.15 (elevated for better view)
        - Pitch: -0.1 rad (~-6°, tilted down)
      -->
      <pose relative_to="base_link">0.2 0 0.15 0 -0.1 0</pose>

      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0001</iyy>
          <iyz>0</iyz>
          <izz>0.0001</izz>
        </inertia>
      </inertial>

      <collision name="camera_collision">
        <geometry>
          <box><size>0.04 0.1 0.03</size></box>
        </geometry>
      </collision>

      <visual name="camera_visual">
        <geometry>
          <box><size>0.04 0.1 0.03</size></box>
        </geometry>
        <material>
          <ambient>0.0 0.0 0.0 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>

      <!--
        ============================================================
        DEPTH CAMERA SENSOR

        Simulates RGB-D cameras like Intel RealSense or Kinect.
        Produces both color (RGB) and depth images.
        ============================================================
      -->
      <sensor name="depth_camera" type="depth_camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>  <!-- 30 FPS -->
        <visualize>true</visualize>
        <topic>camera</topic>

        <camera>
          <!--
            IMAGE RESOLUTION
            ================

            horizontal_fov: Horizontal field of view (radians)
            - 1.047 rad = 60° (typical for depth cameras)
            - Wider FOV = more distortion at edges

            image width/height: Resolution in pixels
            - 640x480 (VGA): Good balance of quality and performance
            - 1280x720 (720p): Higher detail, more GPU load
            - 320x240 (QVGA): Fast but low detail
          -->
          <horizontal_fov>1.047</horizontal_fov>  <!-- 60° -->
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>  <!-- RGB 8-bit per channel -->
          </image>

          <!--
            DEPTH CLIP PLANES
            =================

            near: Minimum depth (closer objects = black)
            far: Maximum depth (farther objects = black)

            Must match physical sensor specs:
            - Intel RealSense D435: 0.1m - 10m
            - Kinect v2: 0.4m - 4.5m
            - Orbbec Astra: 0.6m - 8m
          -->
          <clip>
            <near>0.1</near>   <!-- 10cm minimum -->
            <far>10.0</far>    <!-- 10m maximum -->
          </clip>

          <!--
            DEPTH IMAGE FORMAT
            ==================

            Specifies how depth values are encoded:
            - R_FLOAT32: 32-bit float, meters (recommended)
            - L16: 16-bit unsigned int, millimeters
          -->
          <depth_camera>
            <clip>
              <near>0.1</near>
              <far>10.0</far>
            </clip>
          </depth_camera>

          <!--
            NOISE MODEL
            ===========

            Depth cameras have characteristic noise patterns:
            - Noise increases with distance (quadratic)
            - Edges and surfaces at grazing angles are noisy
            - Reflective/transparent surfaces fail

            type="gaussian": Simple noise model
            - stddev: Base noise level (meters)
          -->
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.005</stddev>  <!-- ±5mm depth noise -->
          </noise>

          <!--
            CAMERA INTRINSICS (calculated from FOV and resolution)
            ================

            fx, fy: Focal length in pixels
            cx, cy: Principal point (usually image center)

            For 60° FOV at 640x480:
            fx = fy = width / (2 * tan(hfov/2))
            fx = 640 / (2 * tan(30°)) = 640 / 1.155 ≈ 554
            cx = 320, cy = 240 (image center)

            These are published in CameraInfo message.
          -->
          <lens>
            <intrinsics>
              <fx>554.26</fx>
              <fy>554.26</fy>
              <cx>320.0</cx>
              <cy>240.0</cy>
              <s>0</s>  <!-- Skew coefficient (usually 0) -->
            </intrinsics>
          </lens>
        </camera>
      </sensor>

      <!--
        ============================================================
        RGB CAMERA SENSOR (separate from depth)

        Some pipelines need RGB and depth as separate topics.
        This provides a standard RGB camera in addition to depth.
        ============================================================
      -->
      <sensor name="rgb_camera" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <topic>camera/color</topic>

        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>100.0</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>  <!-- Typical camera noise -->
          </noise>
        </camera>
      </sensor>
    </link>

    <!-- Fixed joint connecting camera to base -->
    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <!--
      ============================================================
      WHEELS (simplified - same structure as lidar_robot)
      ============================================================
    -->

    <link name="left_wheel">
      <pose relative_to="base_link">0 0.2 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.001</iyy><iyz>0</iyz><izz>0.002</izz>
        </inertia>
      </inertial>
      <collision name="left_wheel_collision">
        <geometry><cylinder><radius>0.1</radius><length>0.05</length></cylinder></geometry>
        <surface><friction><ode><mu>1.0</mu></ode></friction></surface>
      </collision>
      <visual name="left_wheel_visual">
        <geometry><cylinder><radius>0.1</radius><length>0.05</length></cylinder></geometry>
        <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis><xyz>0 0 1</xyz><limit><effort>10</effort><velocity>10</velocity></limit></axis>
    </joint>

    <link name="right_wheel">
      <pose relative_to="base_link">0 -0.2 0 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.001</iyy><iyz>0</iyz><izz>0.002</izz>
        </inertia>
      </inertial>
      <collision name="right_wheel_collision">
        <geometry><cylinder><radius>0.1</radius><length>0.05</length></cylinder></geometry>
        <surface><friction><ode><mu>1.0</mu></ode></friction></surface>
      </collision>
      <visual name="right_wheel_visual">
        <geometry><cylinder><radius>0.1</radius><length>0.05</length></cylinder></geometry>
        <material><diffuse>0.2 0.2 0.2 1</diffuse></material>
      </visual>
    </link>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis><xyz>0 0 1</xyz><limit><effort>10</effort><velocity>10</velocity></limit></axis>
    </joint>

    <!-- Plugins -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
      <topic>cmd_vel</topic>
    </plugin>

  </model>
</sdf>
